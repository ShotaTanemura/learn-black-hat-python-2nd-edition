{
    "name": "Python 3 on Kali Linux",
    "image": "kalilinux/kali-rolling",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12.0"
        }
    },
    "postCreateCommand": "pip install --upgrade pip",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff"
            ]
        }
    }
}
